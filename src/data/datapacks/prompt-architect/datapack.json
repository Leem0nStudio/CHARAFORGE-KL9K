                "name": "character_focus",
                "template": "{masterpiece_quality}, {art_style}, cinematic portrait of {count} {race}, {facial_features}, {eyes}, {hair}, wearing {outfit_top}, {outfit_bottom}, {scene_lighting}, {scene_mood}"
            },
            {
                "name": "scene_focus",
                "template": "{masterpiece_quality}, {art_style}, breathtaking scene of a {location_type}, {location_detail}, {scene_weather}, {scene_lighting}, {scene_mood} atmosphere"
            },
            {
                "name": "action_focus",
                "template": "{masterpiece_quality}, {art_style}, dynamic action shot of {count} {race} {action}, wielding {weapon_type}, {effects}, {camera_shot}"
            },
            {
                "name": "integrated",
                "template": "In a {location_choice}, a {race} {action} under {scene_lighting}. {masterpiece_quality}, {art_style}."
            }
        ],
