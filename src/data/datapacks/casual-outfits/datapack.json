
{
    "name": "Casual Outfits",
    "author": "CharaForge",
    "description": "Create characters with modern, everyday clothing. Perfect for contemporary, slice-of-life, or urban fantasy settings.",
    "type": "free",
    "price": 0,
    "tags": ["modern", "casual", "fashion", "urban", "free"],
    "schema": {
        "promptTemplates": [
            {
                "name": "Street Style Photo",
                "template": "street style photo, full body, {gender}, {hair_style} with {hair_color}, wearing a {topwear}, {bottomwear}, and {footwear}, in a {background_setting}"
            },
            {
                "name": "Cozy Indoor Portrait",
                "template": "cozy indoor portrait of a {gender} wearing a comfortable {topwear} and {bottomwear}, with {hair_style} {hair_color}, in a {background_setting}"
            }
        ],
        "slots": [
            {
                "id": "gender",
                "label": "Gender",
                "type": "select",
                "defaultOption": "woman",
                "options": [
                    { "label": "Woman", "value": "woman", "tags": ["1girl", "woman"] },
                    { "label": "Man", "value": "man", "tags": ["1boy", "man"] },
                    { "label": "Person", "value": "person", "tags": ["person"] }
                ]
            },
            {
                "id": "hair_style",
                "label": "Hair Style",
                "type": "select",
                "defaultOption": "messy bun",
                "options": [
                    { "label": "Messy Bun", "value": "messy bun", "tags": ["messy bun"] },
                    { "label": "Short and Styled", "value": "short styled hair", "tags": ["short hair", "styled hair"] },
                    { "label": "Long and Wavy", "value": "long wavy hair", "tags": ["long hair", "wavy hair"] },
                    { "label": "Bob Cut", "value": "bob cut", "tags": ["bob cut"] }
                ]
            },
            {
                "id": "hair_color",
                "label": "Hair Color",
                "type": "select",
                "defaultOption": "light brown hair",
                "options": [
                    { "label": "Light Brown", "value": "light brown hair", "tags": ["light brown hair"] },
                    { "label": "Dyed Pink", "value": "pink hair", "tags": ["pink hair"] },
                    { "label": "Jet Black", "value": "jet black hair", "tags": ["black hair"] },
                    { "label": "Platinum Blonde", "value": "platinum blonde hair", "tags": ["blonde hair"] }
                ]
            },
            {
                "id": "topwear",
                "label": "Topwear",
                "type": "select",
                "defaultOption": "graphic t-shirt",
                "options": [
                    { "label": "Graphic T-Shirt", "value": "graphic t-shirt", "tags": ["graphic t-shirt", "t-shirt"] },
                    { "label": "Oversized Hoodie", "value": "oversized hoodie", "tags": ["hoodie", "oversized"] },
                    { "label": "Button-up Shirt", "value": "button-up shirt", "tags": ["button-up shirt", "shirt"] },
                    { "label": "Tank Top", "value": "tank top", "tags": ["tank top"] }
                ]
            },
            {
                "id": "bottomwear",
                "label": "Bottomwear",
                "type": "select",
                "defaultOption": "ripped jeans",
                "options": [
                    { "label": "Ripped Jeans", "value": "ripped jeans", "tags": ["ripped jeans", "jeans"] },
                    { "label": "Cargo Shorts", "value": "cargo shorts", "tags": ["cargo shorts", "shorts"] },
                    { "label": "Pleated Skirt", "value": "pleated skirt", "tags": ["pleated skirt", "skirt"] },
                    { "label": "Sweatpants", "value": "sweatpants", "tags": ["sweatpants"] }
                ]
            },
            {
                "id": "footwear",
                "label": "Footwear",
                "type": "select",
                "defaultOption": "sneakers",
                "options": [
                    { "label": "Sneakers", "value": "sneakers", "tags": ["sneakers"] },
                    { "label": "Combat Boots", "value": "combat boots", "tags": ["combat boots"] },
                    { "label": "Sandals", "value": "sandals", "tags": ["sandals"] },
                    { "label": "High Heels", "value": "high heels", "tags": ["high heels"] }
                ]
            },
            {
                "id": "background_setting",
                "label": "Background",
                "type": "select",
                "defaultOption": "city street",
                "options": [
                    { "label": "City Street", "value": "on a city street", "tags": ["cityscape", "street"] },
                    { "label": "Cozy Cafe", "value": "in a cozy cafe", "tags": ["cafe", "indoors"] },
                    { "label": "Skate Park", "value": "at a skate park", "tags": ["skate park"] },
                    { "label": "Library", "value": "in a library", "tags": ["library", "indoors"] }
                ]
            }
        ]
    }
}

    