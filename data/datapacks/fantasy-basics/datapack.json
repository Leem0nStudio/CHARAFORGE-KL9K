
{
    "name": "Fantasy Basics",
    "author": "CharaForge",
    "description": "A foundational pack for creating classic fantasy characters. Includes common races, classes, and basic equipment.",
    "type": "free",
    "price": 0,
    "tags": ["fantasy", "rpg", "classic", "starter", "free"],
    "schema": {
        "promptTemplates": [
            {
                "name": "Detailed Portrait",
                "template": "detailed portrait, fantasy illustration, {gender}, {race}, {class}, {hair_style} {hair_color} hair, {armor_torso}, wielding a {weapon}, {background_setting}",
                "tags": ["portrait", "fantasy", "{gender}", "{race}", "{class}", "{hair_color} hair", "{hair_style} hair", "{armor_torso}", "{weapon}", "{background_setting}"]
            },
            {
                "name": "Oil Painting Style",
                "template": "oil painting, {gender}, {race}, {class}, {hair_style} {hair_color} hair, {armor_torso}, carrying a {weapon}, {background_setting}, dramatic lighting",
                "tags": ["oil painting (medium)", "fantasy", "{gender}", "{race}", "{class}", "{hair_color} hair", "{hair_style} hair", "{armor_torso}", "{weapon}", "{background_setting}", "dramatic lighting"]
            }
        ],
        "slots": [
            {
                "id": "gender",
                "label": "Gender",
                "type": "select",
                "defaultOption": "female",
                "options": [
                    { "label": "Female", "value": "female", "tags": ["1girl", "female"] },
                    { "label": "Male", "value": "male", "tags": ["1boy", "male"] }
                ]
            },
            {
                "id": "race",
                "label": "Race",
                "type": "select",
                "defaultOption": "human",
                "options": [
                    { "label": "Human", "value": "human", "tags": ["human"] },
                    { "label": "Elf", "value": "elf", "tags": ["elf", "pointed ears"] },
                    { "label": "Dwarf", "value": "dwarf", "tags": ["dwarf", "beard"] },
                    { "label": "Orc", "value": "orc", "tags": ["orc", "green skin", "tusks"] }
                ]
            },
            {
                "id": "class",
                "label": "Class",
                "type": "select",
                "defaultOption": "warrior",
                "options": [
                    { "label": "Warrior", "value": "warrior", "tags": ["warrior", "fighter"] },
                    { "label": "Mage", "value": "mage", "tags": ["mage", "sorcerer", "magic"] },
                    { "label": "Rogue", "value": "rogue", "tags": ["rogue", "thief", "assassin"] }
                ]
            },
            {
                "id": "hair_style",
                "label": "Hair Style",
                "type": "select",
                "defaultOption": "long",
                "options": [
                    { "label": "Long", "value": "long", "tags": ["long hair"] },
                    { "label": "Short", "value": "short", "tags": ["short hair"] },
                    { "label": "Braided", "value": "braided", "tags": ["braided hair", "braid"] }
                ]
            },
            {
                "id": "hair_color",
                "label": "Hair Color",
                "type": "select",
                "defaultOption": "brown",
                "options": [
                    { "label": "Brown", "value": "brown", "tags": ["brown hair"] },
                    { "label": "Blonde", "value": "blonde", "tags": ["blonde hair"] },
                    { "label": "Black", "value": "black", "tags": ["black hair"] },
                    { "label": "Red", "value": "red", "tags": ["red hair"] }
                ]
            },
            {
                "id": "armor_torso",
                "label": "Torso Armor",
                "type": "select",
                "defaultOption": "leather_tunic",
                "options": [
                    { "label": "Leather Tunic", "value": "leather_tunic", "tags": ["leather armor", "tunic"] },
                    { "label": "Chainmail", "value": "chainmail", "tags": ["chainmail", "metal armor"] },
                    { "label": "Steel Plate", "value": "steel_plate", "tags": ["plate armor", "cuirass"] },
                    { "label": "Simple Robe", "value": "simple_robe", "tags": ["robe", "mage clothes"] }
                ]
            },
            {
                "id": "weapon",
                "label": "Weapon",
                "type": "select",
                "defaultOption": "longsword",
                "options": [
                    { "label": "Longsword", "value": "longsword", "tags": ["sword", "longsword", "holding sword"] },
                    { "label": "Bow", "value": "bow", "tags": ["bow", "archer"] },
                    { "label": "Staff", "value": "staff", "tags": ["staff", "magic staff", "holding staff"] },
                    { "label": "Dagger", "value": "dagger", "tags": ["dagger", "holding dagger"] }
                ]
            },
            {
                "id": "background_setting",
                "label": "Background",
                "type": "select",
                "defaultOption": "misty_forest",
                "options": [
                    { "label": "Misty Forest", "value": "misty_forest", "tags": ["forest", "mist"] },
                    { "label": "Castle Wall", "value": "castle_wall", "tags": ["castle", "parapet"] },
                    { "label": "Tavern", "value": "tavern", "tags": ["tavern", "inn", "indoors"] }
                ]
            }
        ]
    }
}
