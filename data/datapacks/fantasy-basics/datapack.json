
{
    "name": "Fantasy Basics",
    "author": "CharaForge",
    "description": "A foundational pack for creating classic fantasy characters. Includes common races, classes, and basic equipment.",
    "type": "free",
    "price": 0,
    "tags": ["fantasy", "rpg", "classic", "starter", "free"],
    "schema": {
        "promptTemplates": [
            {
                "name": "Detailed Portrait",
                "template": "A detailed fantasy illustration portrait of a {gender} {race} {class}, with {hair_style} {hair_color} hair. They are wearing a {armor_torso} and wielding a {weapon}. The background is a {background_setting}."
            },
            {
                "name": "Oil Painting Style",
                "template": "An oil painting of a {gender} {race} {class}, with {hair_style} {hair_color} hair and clad in {armor_torso}. They carry a {weapon}, standing before a {background_setting}, dramatic lighting."
            }
        ],
        "slots": [
            {
                "id": "gender",
                "label": "Gender",
                "type": "select",
                "defaultOption": "female",
                "options": [
                    { "label": "Female", "value": "female" },
                    { "label": "Male", "value": "male" }
                ]
            },
            {
                "id": "race",
                "label": "Race",
                "type": "select",
                "defaultOption": "human",
                "options": [
                    { "label": "Human", "value": "human" },
                    { "label": "Elf", "value": "elf" },
                    { "label": "Dwarf", "value": "dwarf" },
                    { "label": "Orc", "value": "orc" }
                ]
            },
            {
                "id": "class",
                "label": "Class",
                "type": "select",
                "defaultOption": "warrior",
                "options": [
                    { "label": "Warrior", "value": "warrior" },
                    { "label": "Mage", "value": "mage" },
                    { "label": "Rogue", "value": "rogue" }
                ]
            },
            {
                "id": "hair_style",
                "label": "Hair Style",
                "type": "select",
                "defaultOption": "long",
                "options": [
                    { "label": "Long", "value": "long" },
                    { "label": "Short", "value": "short" },
                    { "label": "Braided", "value": "braided" }
                ]
            },
            {
                "id": "hair_color",
                "label": "Hair Color",
                "type": "select",
                "defaultOption": "brown",
                "options": [
                    { "label": "Brown", "value": "brown" },
                    { "label": "Blonde", "value": "blonde" },
                    { "label": "Black", "value": "black" },
                    { "label": "Red", "value": "red" }
                ]
            },
            {
                "id": "armor_torso",
                "label": "Torso Armor",
                "type": "select",
                "defaultOption": "leather tunic",
                "options": [
                    { "label": "Leather Tunic", "value": "leather tunic" },
                    { "label": "Chainmail", "value": "chainmail shirt" },
                    { "label": "Steel Plate", "value": "steel breastplate" },
                    { "label": "Simple Robe", "value": "simple robe" }
                ]
            },
            {
                "id": "weapon",
                "label": "Weapon",
                "type": "select",
                "defaultOption": "longsword",
                "options": [
                    { "label": "Longsword", "value": "longsword" },
                    { "label": "Bow", "value": "bow and arrow" },
                    { "label": "Staff", "value": "glowing magic staff" },
                    { "label": "Dagger", "value": "sharp dagger" }
                ]
            },
            {
                "id": "background_setting",
                "label": "Background",
                "type": "select",
                "defaultOption": "misty_forest",
                "options": [
                    { "label": "Misty Forest", "value": "misty forest" },
                    { "label": "Castle Wall", "value": "castle parapet" },
                    { "label": "Tavern", "value": "cozy tavern interior" }
                ]
            }
        ]
    }
}
