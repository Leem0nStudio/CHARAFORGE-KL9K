
{
    "name": "Casual Outfits",
    "author": "CharaForge",
    "description": "Create characters with modern, everyday clothing. Perfect for contemporary, slice-of-life, or urban fantasy settings.",
    "type": "free",
    "price": 0,
    "tags": ["modern", "casual", "fashion", "urban", "free"],
    "schema": {
        "promptTemplates": [
            {
                "name": "Street Style Photo",
                "template": "street style photo, full body, {gender}, {hair_style}, {hair_color} hair, wearing a {topwear}, {bottomwear}, and {footwear}, in a {background_setting}"
            },
            {
                "name": "Cozy Indoor Portrait",
                "template": "cozy indoor portrait, {gender}, wearing a comfortable {topwear} and {bottomwear}, {hair_style}, {hair_color} hair, in a {background_setting}"
            }
        ],
        "slots": [
            {
                "id": "gender",
                "label": "Gender",
                "type": "select",
                "defaultOption": "woman",
                "options": [
                    { "label": "Woman", "value": "woman", "tags": ["1girl", "woman"] },
                    { "label": "Man", "value": "man", "tags": ["1boy", "man"] },
                    { "label": "Person", "value": "person", "tags": ["person"] }
                ]
            },
            {
                "id": "hair_style",
                "label": "Hair Style",
                "type": "select",
                "defaultOption": "messy_bun",
                "options": [
                    { "label": "Messy Bun", "value": "messy_bun", "tags": ["messy bun"] },
                    { "label": "Short and Styled", "value": "short_styled", "tags": ["short hair", "styled hair"] },
                    { "label": "Long and Wavy", "value": "long_wavy", "tags": ["long hair", "wavy hair"] },
                    { "label": "Bob Cut", "value": "bob_cut", "tags": ["bob cut"] }
                ]
            },
            {
                "id": "hair_color",
                "label": "Hair Color",
                "type": "select",
                "defaultOption": "light_brown",
                "options": [
                    { "label": "Light Brown", "value": "light_brown", "tags": ["light brown hair"] },
                    { "label": "Dyed Pink", "value": "dyed_pink", "tags": ["pink hair"] },
                    { "label": "Jet Black", "value": "jet_black", "tags": ["black hair"] },
                    { "label": "Platinum Blonde", "value": "platinum_blonde", "tags": ["blonde hair"] }
                ]
            },
            {
                "id": "topwear",
                "label": "Topwear",
                "type": "select",
                "defaultOption": "graphic_t-shirt",
                "options": [
                    { "label": "Graphic T-Shirt", "value": "graphic_t-shirt", "tags": ["graphic t-shirt", "t-shirt"] },
                    { "label": "Oversized Hoodie", "value": "oversized_hoodie", "tags": ["hoodie", "oversized"] },
                    { "label": "Button-up Shirt", "value": "button-up_shirt", "tags": ["button-up shirt", "shirt"] },
                    { "label": "Tank Top", "value": "tank_top", "tags": ["tank top"] }
                ]
            },
            {
                "id": "bottomwear",
                "label": "Bottomwear",
                "type": "select",
                "defaultOption": "ripped_jeans",
                "options": [
                    { "label": "Ripped Jeans", "value": "ripped_jeans", "tags": ["ripped jeans", "jeans"] },
                    { "label": "Cargo Shorts", "value": "cargo_shorts", "tags": ["cargo shorts", "shorts"] },
                    { "label": "Pleated Skirt", "value": "pleated_skirt", "tags": ["pleated skirt", "skirt"] },
                    { "label": "Sweatpants", "value": "sweatpants", "tags": ["sweatpants"] }
                ]
            },
            {
                "id": "footwear",
                "label": "Footwear",
                "type": "select",
                "defaultOption": "classic_sneakers",
                "options": [
                    { "label": "Sneakers", "value": "classic_sneakers", "tags": ["sneakers"] },
                    { "label": "Combat Boots", "value": "combat_boots", "tags": ["combat boots"] },
                    { "label": "Sandals", "value": "sandals", "tags": ["sandals"] },
                    { "label": "High Heels", "value": "high_heels", "tags": ["high heels"] }
                ]
            },
            {
                "id": "background_setting",
                "label": "Background",
                "type": "select",
                "defaultOption": "city_street",
                "options": [
                    { "label": "City Street", "value": "city_street", "tags": ["cityscape", "street"] },
                    { "label": "Cozy Cafe", "value": "cozy_cafe", "tags": ["cafe", "indoors"] },
                    { "label": "Skate Park", "value": "skate_park", "tags": ["skate park"] },
                    { "label": "Library", "value": "library", "tags": ["library", "indoors"] }
                ]
            }
        ]
    }
}
