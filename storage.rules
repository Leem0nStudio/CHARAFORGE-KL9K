rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // By default, deny all reads and writes
    // This is a secure default. We can open this up as features are added.
    
    // Allow writes only for authenticated users.
    // This is a good general-purpose rule for when you add file uploads.
    // We match any path below the root.
    match /{allPaths=**} {
      allow read: if false; // No public reads by default
      allow write: if request.auth != null;
    }
  }
}
